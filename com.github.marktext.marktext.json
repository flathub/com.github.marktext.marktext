{
    "app-id": "com.github.marktext.marktext",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "19.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "marktext",
    "rename-appdata-file": "marktext.appdata.xml",
    "rename-desktop-file": "marktext.desktop",
    "rename-icon": "marktext",
    "separate-locales": false,
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--filesystem=home",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--device=dri",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=com.canonical.AppMenu.Registrar",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.portal.Fcitx",
        "--talk-name=org.freedesktop.secrets",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        "shared-modules/libsecret/libsecret.json",
        {
            "name": "marktext",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "FLATPAK_ARCH": "x86_64"
                        }
                    }
                }
            },
            "build-commands": [
                "chmod +x build-marktext.sh",
                "./build-marktext.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/marktext/marktext/releases/download/v0.16.1/marktext-x64.tar.gz",
                    "sha256": "c8af8fd8da050fe7852b6ad2c4f78590a478e63f0f41832bf262800feefbffaa",
                    "dest": "marktext_binary"
                },
                {
                    "type": "git",
                    "url": "https://github.com/marktext/marktext.git",
                    "commit": "1b6e98b9a1b6a7af14b444a1223c440992f54b7e"
                },
                {
                    "type": "file",
                    "path": "build-marktext.sh"
                },
                {
                    "type": "file",
                    "path": "marktext.sh"
                }
            ]
        }
    ]
}

